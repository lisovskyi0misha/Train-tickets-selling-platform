<h4>Wagon <%= @wagon.id %></h4>
<p>Type: <%= @wagon.type.delete_suffix('Wagon') %></p>
<% case @wagon.type %>
    <% when 'CoupeWagon'%>
        <p>Top seats: <%= @wagon.top_seats_quantity %></p>
        <p>Lower seats: <%= @wagon.lower_seats_quantity %></p>
    <% when 'SleepingWagon' %>
        <p>Lower seats: <%= @wagon.lower_seats_quantity %></p>
    <% when 'EconomyWagon' %>
        <p>Top seats: <%= @wagon.top_seats_quantity %></p>
        <p>Lower seats: <%= @wagon.lower_seats_quantity %></p>
        <p>Top side seats: <%= @wagon.top_side_seats_quantity %></p>
        <p>Lower side seats: <%= @wagon.lower_side_seats_quantity %></p>
    <% when 'SeatedWagon' %>
        <p>Seated seats: <%= @wagon.seated_seats_quantity %>
    <% end %>
<p>Train: <%= @wagon.train.number %></p> 
<span><%= link_to 'Edit', edit_admin_wagon_path(id: @wagon.id), class: 'btn btn-secondary' %></span>
<span><%= link_to 'Show', admin_wagon_path(id: @wagon.id), class: 'btn btn-secondary' %></span>
<span><%= button_to 'Delete', admin_wagon_path(id: @wagon.id), method: :delete, class: 'btn btn-secondary' %></span>
